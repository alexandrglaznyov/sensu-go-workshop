---
type: PostgresConfig
api_version: store/v1
metadata:
  name: postgres
spec:
  dsn: "postgresql://${SENSU_BACKEND_CLUSTER_ADMIN_USERNAME}:${SENSU_BACKEND_CLUSTER_ADMIN_PASSWORD}@postgres-beta:5432/sensu_events?sslmode=disable"
  pool_size: 20
  batch_buffer: 0
  batch_size: 1
  batch_workers: 0
  max_conn_lifetime: 5m
  max_idle_conns: 2
  strict: true
  enable_round_robin: true
